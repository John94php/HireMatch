{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    

    <label for="email" class="mt-3">Email</label>
    <input type="email"  name="email" id="email" class="form-control" autocomplete="email" required autofocus>

    <label for="password" class="mt-3">Password</label>
    <input type="password" name="password" id="password" class="form-control" autocomplete="new-password" required>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="is_candidate" id="is_candidate_k" value="0">
        <label class="form-check-label" for="is_candidate_k">
            Candidate
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="is_candidate" id="is_candidate_f" value="1">
        <label class="form-check-label" for="is_candidate_f">
           Company
                </label>
    </div>

    {# Pole akceptacji regulaminu #}
    <div class="form-check mt-3">
        <input class="form-check-input" type="checkbox" id="terms" name="terms" required>
        <label class="form-check-label" for="terms">
            I accept the terms and conditions
        </label>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="mt-3 mb-3">        
        <button class="btn btn-lg btn-primary" type="submit">
            Register
        </button>
    </div>
</form>
{% endblock %}
